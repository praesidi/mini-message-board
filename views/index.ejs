<!doctype html>
<html>
	<head>
		<title><%= title %></title>
		<link rel="stylesheet" href="/stylesheets/style.css" />
	</head>
	<body>
		<h1>Welcome to <%= title %></h1>
    <a href="/new">
      <button>Add new message</button>
    </a>
		<div>
      <% messages.forEach(function(message) { %>
        <div>
          <h3><%= message.user %></h3>
          <h5><%= message.added %></h5>
          <p><%= message.text %></p>
        </div>
      <% }); %>
    </div>
	</body>
</html>
